<VirtualHost *:{{ http_port | default(80) }}>
    DocumentRoot {{ wp_root }}
    <Directory {{ wp_root }}>
        Options FollowSymLinks
        AllowOverride Limit Options FileInfo
        DirectoryIndex index.php
        Require all granted
    </Directory>
    <Directory {{ wp_root }}/wp-content>
        Options FollowSymLinks
        Require all granted
    </Directory>
</VirtualHost>
